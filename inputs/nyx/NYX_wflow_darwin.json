{
	"project-home" : "/projects/exasky/pascal-projects/VizAly-CBench/",
	"wflow-path": "nyx_wflow",

  	"input": 
  	{
	    "filetype": "NYX",
	    "filename": "/projects/exasky/pascal-projects/VizAly-CBench/testing/data/z255_32.h5",  

	    "scalars-comment": "which scalars to test",
	    "group" : "native_fields",
	    "scalars": [ "baryon_density", "dark_matter_density", "temperature", "velocity_x", "velocity_y", "velocity_z" ],

	    "uncompressed": 
		[
	  		{
				"group": "domain",
				"attributes": [
			  		{
						"name": "shape",
						"type": "int",
						"size": 3
			  		},
			  		{
						"name": "size",
						"type": "double",
						"size": 3
			  		}
				]
	  		},

	  		{
				"group": "universe",
				"attributes": 
				[
					{
						"name": "hubble",
						"type": "double",
						"size": 1 
					},

			  		{
						"name": "omega_b",
						"type": "double",
						"size": 1
			 		},

			  		{
						"name": "omega_l",
						"type": "double",
						"size": 1
			  		},

					{
						"name": "omega_m",
						"type": "double",
						"size": 1
					},

					{
						"name": "redshift",
						"type": "double",
						"size": 1
					}
				]
	  		}
		]
  	},

	"compressor-comment" : "which compressors to test",
	"compressors" : 
	[
		{
			"name": "BLOSC",
			"output-prefix" : "BLOSC_"
		},
		
		{
            "name": "SZ",
            "output-prefix" : "sz_002_",
            "abs" : 2E-3
		},

		{
			"name": "zfp",
			"output-prefix" : "zfp_abs_001_",
			"abs": 1E-3
		}
	],

	
	"cbench": 
	{
		"path" : "mpirun /projects/exasky/pascal-projects/VizAly-CBench/build/CBench",

        "output" :
		{
			"run-path" : "/projects/exasky/VizAly-CBench/build/",

			"output-decompressed": true,
			"output-decompressed-location" : "NYX_wflow_",
			
			"logfname-comment": "name of output log file",
			"log-file" : "runlog_NYX_all_",

			"metricsfname-comment": "name of file with output",
			"metrics-file" : "metrics_NYX_all_"
		},


		"metrics-comment" : "which metrics to use",
		"metrics": 
		[
			{
				"name" : "absolute_error"
			},

			{
				"name" : "relative_error"
			},

			{
				"name" : "mse"
			},

			{
				"name" : "psnr"
			}
		],

		"evn_path": "/projects/exasky/HACC.darwin_setup",

		"configuration": {
			"partition": "scaling",
			"nodes": 1,
			"ntasks-per-node": 16
		}

	},


	"pat" :
	{
		"evn_path" : "/projects/exasky/HACC.darwin_setup",

		"analysis-tool" :
		{
			"gimlet-home" : "/projects/exasky/gimlet2",

			"analytics": 
			[
                {
                    "name": "sim_stats", 
                    "type" : ["rhob", "rhom", "rhodm", "temp", "velmag", "vz"],
