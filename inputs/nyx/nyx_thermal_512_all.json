      },
      {
        "group": "domain",
        "attributes": [
          {
            "name": "shape",
            "type": "int",
            "size": 3
          },
          {
            "name": "size",
            "type": "double",
            "size": 3
          }
        ]
      },
      {
        "group": "universe",
        "attributes": [
          {
            "name": "hubble",
            "type": "double",
            "size": 1 
          },
          {
            "name": "omega_b",
            "type": "double"
            "size": 1
          },
          {
            "name": "omega_l",
            "type": "double"
            "size": 1
          },
          {
            "name": "omega_m",
            "type": "double"
            "size": 1
          },
          {
            "name": "redshift",
            "type": "double"
            "size": 1
          }
        ]
      }
    ]
  },
  "output":{
    "output-decompressed":true,
    "output-prefix":"test_write",
    "logfname-comment":"name of output log file",
    "logfname":"runlog_nyx_thermal",
    "metricsfname-comment":"name of file with output",
    "metricsfname":"metrics_nyx_thermal"
  },
  "compressor-comment":"which compressors to test",
  "compressors":[
    {
      "name":"BigCrunch",
      "compressor-params":[
        {
          "scalar":[
            "baryon_density",
            "dark_matter_density",
            "temperature"
          ],
          "tolerance": 1E-3
        },
        {
          "scalar":[
            "velocity_x",
            "velocity_y",
            "velocity_z"
          ],
          "tolerance": 1E-3
        }
      ]
    },
    {
      "name":"fpzip",
      "bits":16
    },
    {
      "name":"Isabela",
      "tolerance":1,
      "pcnt":50,
      "window-size":1024
    },
    {
      "name":"SZ",
      "compressor-params":[
        {
          "scalar":[
            "baryon_density",
            "dark_matter_density"
          ],
          "abs":0.01
        },
        {
          "scalar":"temperature",
          "abs":20
        },
        {
          "scalar":[
            "velocity_x",
            "velocity_y",
            "velocity_z"
          ],
          "tolerance":0.01
        }
      ]
    },
    {
      "name":"zfp",
      "compressor-params":[
        {
          "scalar":[
            "baryon_density",
            "dark_matter_density"
          ],
          "abs":0.028
        },
        {
          "scalar":"temperature",
          "abs":70
        },
        {
          "scalar":"velocity_x",
          "abs":0.063
        },
        {
          "scalar":"velocity_y",
          "abs":0.04
        },
        {
          "scalar":"velocity_z",
          "abs":0.039
        }
      ]
    }
  ],
  "metrics-comment":"which metrics to use",
  "metrics":[
    {
      "name":"relative_error"
    },
    {
      "name":"psnr"
    }
  ]
